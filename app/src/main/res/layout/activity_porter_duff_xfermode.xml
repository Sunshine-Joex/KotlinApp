<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.administrator.kotlinapp.ui.PorterDuffXfermodeActivity"
       >
   

    <com.example.administrator.kotlinapp.view.PorterDuffXfermodeView
        android:id="@+id/circle"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:src="@drawable/photo" />

        <com.example.administrator.kotlinapp.view.PorterDuffXfermodeView
            android:id="@+id/round"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            app:type="round"
            android:src="@drawable/photo" />
        <com.example.administrator.kotlinapp.view.PorterDuffXfermodeView
            android:id="@+id/round1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_below="@id/circle"
            app:type="round"
            android:src="@drawable/photo" />
        <com.example.administrator.kotlinapp.view.PorterDuffXfermodeView
            android:id="@+id/oval"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_below="@id/round"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            app:type="oval"
            android:layout_marginBottom="50dp"
            android:src="@drawable/photo" />

        <com.example.administrator.kotlinapp.view.PorterDuffXfermodeView
            android:id="@+id/heart"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/round1"
            android:layout_centerInParent="true"
            app:type="heart"
            android:src="@drawable/photo" />




    </RelativeLayout>
